pipeline {
    agent any
    tools {
  maven 'M2_HOME'
}
    triggers {
  pollSCM '* * * * *'
}


    stages {
        stage('Build') {
            steps {
                sh 'mvn clean'
                sh 'mvn install'
                sh 'mvn package'
            }
        }
        stage('Test') {
            steps {
                 sh 'mvn test'
            }
        }
        stage('Deployement') {
            steps {
                echo 'Deploy Step'
                sleep 9
            }
        }
        stage('Docker') {
            steps {
                echo 'Image Step'
            }
        }
    }
}
